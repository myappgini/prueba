<div class="mySliders">
  <div class="row">
    {{#each images }}
      <div
        class="mySlides lbid-{{@index}} col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2"
        style="{{#when defaultImage eq true}} display: block;{{/when}}"
      >
      <a {{> bs3_fileTypes}}>
        {{#if thumbnail}} 
          <img src="{{folder_base}}/{{name}}_th.jpg?m={{#filemtime this}}"
              alt="{{fileName}}"/>
        {{else}}
          {{> bs3_ispdf}}
          <small class="">{{title}}</small>
        {{/if}}
      </a>
      </div>
      {{#when type eq mov}}
        {{> bs3_videoModal}}
      {{/when}}
      {{#when extension eq pdf}} 
        {{> bs3_pdfModal}}
      {{/when}}
    {{/each}}
  </div>
  <div class="row columns-thumbs">
    {{#each images }}
      <div class="col-xs-3 col-md-6">
        {{#if thumbnail}} 
          <img
            class="img-lite thumbnail {{#when defaultImage eq true}} active {{/when}}"
            src="{{folder_base}}/{{name}}_th.jpg?m={{#filemtime this}}"
            onclick="currentSlide({{@index}})"
            alt="{{name}}"
          />
        {{else}}
          <a class="attachment-thumbnail-preview img-lite thumbnail {{#when defaultImage eq true}} active {{/when}}"
            title="{{title}}" 
            onclick="currentSlide({{@index}})">
            {{> bs3_ispdf}}
          </a>
        {{/if}}
      </div>
    {{/each}}
  </div>
</div>