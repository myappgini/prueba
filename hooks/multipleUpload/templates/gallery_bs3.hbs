<div id="images-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class=" modal-dialog modal-lg " role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Gallery</h4>
      </div>
        <div class="modal-body">    
          <ul class="list-gropu" >
              {{#each images}}  
            <li class=" list-group-item {{#if defaultImage}} list-group-item-success {{/if}}">
              <div class="row">
                <div class=" col-xs-4  col-md-4">
                  <div
                    class="lbid-{{@index}} d-flex justify-content-center">


                      {{#when extension eq pdf}} 
                        <a href="#" class=" thumbnail" onclick="showPdf('{{folder_base}}/{{fileName}}' , '{{name}}' )">
                      {{/when}}
                      {{#when type eq img}}
                        <a class="thumbnail" href="{{folder_base}}/{{fileName}}" data-lightbox="set-{{@index}}" data-title="{{title}}">
                      {{/when}}
                          <img  class=""
                                src="{{folder_base}}/{{name}}_th.jpg?m={{#filemtime this}}"
                                alt="{{fileName}}"/>
                        </a>
                  </div>
                </div>


                <div class="col-xs-8 col-md-8">
                  <ul class="list-group">
                     {{#when extension eq pdf}} 
                        <a href="#" class=" list-group-item list-group-item-action active" onclick="showPdf('{{folder_base}}/{{fileName}}' , '{{name}}' )">
                      {{/when}}
                      {{#when type eq img}}
                        <a class="list-group-item list-group-item-action active" href="{{folder_base}}/{{fileName}}" data-lightbox="set-{{@index}}" data-title="{{title}}">
                      {{/when}}
                      <h5 class="">
                        {{name}}
                      </h5>
                    </a>
                    <li class=" list-group-item">extension: {{extension}}</li>
                    <li class=" list-group-item">upload by: {{userUpload}}</li>
                    <div class="list-group-item default-image">
                      <div class="row">
                        <div class="col-xs-3">
                        defualt:  
                        </div>
                        {{#if defaultImage}}
                          <div class="col-xs-9">true</div>
                        {{else}} 
                        <div class="col-xs-4">
                          false 
                        </div>
                        <div class="col-xs-5" >
                          <button type="button" class="btn btn-primary btn-xs set-default-image" data-index="{{index}}">
                            Set as defualt
                          </button>
                        </div>
                        {{/if}}
                      </div>
                    </div>
                    <li class=" list-group-item">reanamed: {{isRenamed}}</li>
                    <li class=" list-group-item">type - size: {{type}} - {{size}}</li>
                    <li class=" list-group-item">folder: {{folder_base}}</li>
                    <li class=" list-group-item">date - time: {{dateUpload}} - {{timeUpload}}</li>
                  </ul>
                </div>
              </div>
            </li>
              {{/each}}
          </ul>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="save_button('{{tn}}','{{id}}');">Save changes</button>
      </div>
    </div>
  </div>
</div>