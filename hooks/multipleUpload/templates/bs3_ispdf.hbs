  {{#when extension eq pdf}}
    <img  class = "img-pdf-{{@index}}"
          data-pdffile="{{folder_base}}/{{name}}.pdf" 
          src="hooks/multipleUpload/pdf.png" 
          data-pdfpage="{{pdfPage}}"
          data-pdfsize="false"
          data-ix="{{@index}}"
      >
  {{/when}}
  {{#when extension !eq pdf}}
    <span class="attachment-thumbnail">{{extension}}</span>
  {{/when}}