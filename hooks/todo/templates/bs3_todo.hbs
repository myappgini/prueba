<!-- TO DO List -->
<div class='box box-primary'>
  <div class='box-header'>
    <i class='glyphicon glyphicon-list-alt'></i>
    <h3 class='box-title'>
      To Do List
    </h3>
    <div class='box-tools pull-right'>
      <button type='button' class='btn btn-box-tool close-remove'>
        <i class='glyphicon glyphicon-remove'></i>
      </button>
    </div>
  </div>
  <div class='box-body'>
    <ul class='todo-list'>
      {{#each tasks}}
          {{> task}}
      {{/each}}
    </ul>

  </div>
  <div class='box-footer clearfix no-border'>
    <div class='input-group'>
      <input type='text' class='form-control task-to-add' placeholder='Enter task...' />
      <span class='input-group-btn'>
        <button class='btn btn-default add-todo-task' type='button'>
          <i class='glyphicon glyphicon-plus'></i>
          Add task
        </button>
      </span>
    </div>
  </div>
</div>
<!-- / TO DO List -->